    <h2> Q1 3rd Graded Exercise submitted by Bettina of Strontium </h2>

<input id="mealPrice" type="number" placeholder="Meal Price"> <br>

<input id="myTip" type="number" placeholder="Tip Percentage"> <br>

<input id="serviceCharge" type="number" placeholder="Service Charge (%)"> <br>

<button onclick="calculateTotalMeal()">Calculate Total</button>

<div id="totalMeal"></div>

    <script>
        function calculateTotalMeal() {
         let mealPrice = Number(document.getElementById("mealPrice").value);
         let myTip = Number(document.getElementById("myTip").value);
         let serviceCharge = Number(document.getElementById("serviceCharge").value);

        let totalCost = mealPrice + myTip + (serviceCharge / 100 * mealPrice);
            totalMeal.innerHMTL = "Your total amount: Php" + totalCost.toFixed(2);
        }
    </script>

